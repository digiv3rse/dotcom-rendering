{
	"name": "dotcom-rendering",
	"version": "1.0.0",
	"repository": "git@github.com:guardian/dotcom-rendering.git",
	"license": "Apache-2.0",
	"private": true,
	"workspaces": [
		"dotcom-rendering",
		"common-rendering"
	],
	"scripts": {
		"postinstall": "npm install --prefix ./apps-rendering",
		"storybook": "node -r ts-node/register --max-old-space-size=4096 $(yarn bin)/start-storybook --static-dir ./dotcom-rendering/src/static -p 6006",
		"build-storybook": "node -r ts-node/register --max-old-space-size=4096 $(yarn bin)/build-storybook --static-dir ./dotcom-rendering/src/static",
		"build:dcr": "cd ./dotcom-rendering && yarn makeBuild",
		"chromatic": "chromatic --build-script-name=build-storybook --exit-zero-on-changes",
		"prepare": "husky install"
	},
	"dependencies": {
		"@emotion/cache": "^11.4.0",
		"@emotion/css": "^11.1.3",
		"@emotion/react": "^11.4.1",
		"@emotion/server": "^11.4.0",
		"preact": "^10.5.14",
		"preact-render-to-string": "^5.1.19",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"resolutions": {
		"@types/loadable__webpack-plugin": "file:./dotcom-rendering/scripts/webpack/@types/@loadable/webpack-plugin",
		"@types/webpack": "^5.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.16.12",
		"@guardian/eslint-plugin-source-react-components": "^4.0.2",
		"@guardian/source-foundations": "^4.0.3",
		"@guardian/source-react-components": "^4.0.2",
		"@guardian/source-react-components-development-kitchen": "^0.0.33",
		"@storybook/addon-essentials": "^6.4.19",
		"@storybook/addon-knobs": "^6.3.1",
		"@storybook/builder-webpack5": "^6.4.19",
		"@storybook/manager-webpack5": "^6.4.19",
		"@storybook/react": "^6.4.19",
		"babel-loader": "^8.2.2",
		"chromatic": "^6.0.6",
		"desvg-loader": "^0.1.0",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"husky": "^7.0.0",
		"mockdate": "^3.0.5",
		"svg-loader": "^0.0.2",
		"ts-loader": "^9.2.5",
		"ts-node": "^10.5.0",
		"typescript": "^4.3.5",
		"webpack": "^5.51.1",
		"webpack-dev-server": "^4.7.4"
	}
}
